
@{
    ViewBag.Title = "Login";
}

<div class="app flex-row align-items-center  pace-done">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4" id="LoginArea">
                        <div class="card-body">
                            @if (ViewData["ErrorMessage"] != null)
                            {
                                <div class="alert alert-danger">
                                    @ViewData["ErrorMessage"]
                                </div>
                            }
                            @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                            {
                                @Html.Hidden("callback", Request.QueryString["callback"])
                                <h2>Login</h2>
                                <br>
                                <div class="form-group">
                                    <label>Username (try: demo@example.com)</label>
                                    <input type="text" name="username" class="form-control" required />
                                </div>
                                <div class="form-group">
                                    <label>Password (try: demo)</label>
                                    <input type="password" name="password" class="form-control" required />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Login" class="btn bg-primary" />
                                </div>
                            }
                        </div>

                    </div>
                    <div class="card text-white bg-primary py-5 d-md-down-none" style="        width: 44%">
                        <div class="card-body text-center">
                            <div>
                                <h2>SSO Testing</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
